<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/linearLayout1"
        style="@style/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <Button
            android:id="@+id/timecloseback"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/setmusicnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="定时退出"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#E9D9C2" >
        <TextView 
            android:id="@+id/daojishitext"
            android:text="倒计时30:00"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="8"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"></TextView>
        <Switch
        	android:id="@+id/dingshiswitch"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginBottom="10dp"
        	android:layout_marginTop="10dp"
        	android:layout_marginRight="10dp"
        	android:layout_weight="2"
         />"
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shijiancao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#E9D9C2" 
        android:visibility="gone" >

        <SeekBar
            android:id="@+id/dingshiBar"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="115" />
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
         >
        	<TextView 
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_weight="1"
        	    android:gravity="left"
        	    android:layout_marginLeft="5dp"
        	    android:text="5分钟"/>
        	<TextView 
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_weight="1"
        	    android:layout_marginRight="5dp"
        	    android:gravity="right"
        	    android:text="120分钟"/>
    	</LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/shijiancao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp" >
     
        	<TextView 
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_weight="1"
        	    android:gravity="center"
        	    android:layout_marginLeft="5dp"
        	    android:text="倒计时结束将自动退出爱音乐"/> 
        
    </LinearLayout>

    

</LinearLayout>
